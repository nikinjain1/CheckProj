<%= link_to gravatar_for(@micropost.user, :height => "52", :width => "52"), @micropost.user %>
    <span class="user">
      <%= link_to @micropost.user.name, @micropost.user %>
    </span>
    <span class="content"><%= @micropost.content.html_safe %></span>

  <div class="reply_link">
    <%= link_to "reply", micropost_path(@micropost.id) %>
  </span>

  <span class="vertical bar"> | </span>
  <% if current_user?(@micropost.user) %>
    <%= link_to "delete", @micropost, :method => :delete,
                                     :data => { :confirm => "You sure?" },
                                     :title => @micropost.content %>
  <% else %>
    <%= link_to "repost", repost_path(micropost: @micropost), method: :post %>
  <% end %>

  <span class="timestamp">
    Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
  </span>

  <div class="show_text_box">
    <textarea></textarea>
  </div>
</li>

